<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Compose handles all UI theming. -->
    <style name="Base.Theme.HsrGraphicDroid" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HsrGraphicDroid" parent="Base.Theme.HsrGraphicDroid" />
    
    <!-- Splash Screen Theme for Compose -->
    <style name="Theme.HsrGraphicDroid.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.HsrGraphicDroid</item>
    </style>
</resources>
