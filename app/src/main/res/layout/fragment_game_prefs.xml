<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.GamePrefsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/game_preferences"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:titleCentered="true"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Loading Overlay with CircularProgressIndicator -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorSize="48dp"
                app:trackThickness="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/loading"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="96dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_info"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Last User ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/user_id"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        
                        <TextView
                            android:id="@+id/tvUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorPrimary"
                            tools:text="123456789"/>
                    </LinearLayout>

                    <!-- Last Server Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/server_name"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        
                        <TextView
                            android:id="@+id/tvServerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorPrimary"
                            tools:text="prod_gf_sg"/>
                    </LinearLayout>

                    <!-- Elf Order Hint -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/elf_order_hint"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipElfOrderHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Shown"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Language Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_settings"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:drawableStart="@drawable/ic_language"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Text Language -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_language"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:layout_marginBottom="4dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_language_desc"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginBottom="8dp"/>
                        
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupTextLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextCn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="简体中文"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextTw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="繁體中文"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextEn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextJp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日本語"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextKr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="한국어"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextDe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deutsch"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextEs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Español"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextFr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Français"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Indonesia"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextRu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Русский"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextPt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Português"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextTh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ไทย"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTextVi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiếng Việt"
                                style="@style/Widget.Material3.Chip.Filter"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="?attr/colorOutlineVariant"/>

                    <!-- Audio Language -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audio_language"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:layout_marginBottom="4dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audio_language_desc"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginBottom="8dp"/>
                        
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupAudioLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAudioCn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中文"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAudioEn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAudioJp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日本語"
                                style="@style/Widget.Material3.Chip.Filter"/>
                            
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAudioKr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="한국어"
                                style="@style/Widget.Material3.Chip.Filter"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Video Blacklist Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/video_blacklist"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:drawableStart="@drawable/ic_videocam_off"
                            android:drawablePadding="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:visibility="gone"
                            app:icon="@drawable/ic_add"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_blacklist_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvVideoBlacklistCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp"
                        tools:text="3 videos blocked"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerVideoBlacklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_blacklist"
                        tools:itemCount="3"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Audio Blacklist Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/audio_blacklist"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:drawableStart="@drawable/ic_volume_off"
                            android:drawablePadding="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddAudio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:visibility="gone"
                            app:icon="@drawable/ic_add"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_blacklist_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvAudioBlacklistCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp"
                        tools:text="2 audio files blocked"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAudioBlacklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_blacklist"
                        tools:itemCount="2"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainer"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/reset"
                android:textSize="14sp"
                app:icon="@drawable/ic_refresh"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.TonalButton.Icon"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/apply_settings_now"
                android:textSize="14sp"
                app:icon="@drawable/ic_check"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.Icon"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
