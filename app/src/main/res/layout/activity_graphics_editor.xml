<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GraphicsEditorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/graphics_editor"
            app:navigationIcon="@drawable/ic_back"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Presets -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/presets"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/btnPresetLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preset_low"
                            app:chipIcon="@drawable/ic_low"
                            style="@style/Widget.Material3.Chip.Assist"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/btnPresetMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preset_medium"
                            app:chipIcon="@drawable/ic_medium"
                            style="@style/Widget.Material3.Chip.Assist"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/btnPresetHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preset_high"
                            app:chipIcon="@drawable/ic_high"
                            style="@style/Widget.Material3.Chip.Assist"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/btnPresetUltra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preset_ultra"
                            app:chipIcon="@drawable/ic_star"
                            style="@style/Widget.Material3.Chip.Assist"/>

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/graphics_settings"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="16dp"/>

                    <!-- FPS -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fps"
                        android:textAppearance="?attr/textAppearanceLabelLarge"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderFps"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="30"
                            android:valueTo="120"
                            android:stepSize="30"/>
                        <TextView
                            android:id="@+id/tvFpsValue"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="60"/>
                    </LinearLayout>

                    <!-- VSync -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/vsync"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVsync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Render Scale -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/render_scale"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderRenderScale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0.5"
                            android:valueTo="2.0"
                            android:stepSize="0.1"/>
                        <TextView
                            android:id="@+id/tvRenderScaleValue"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="1.0"/>
                    </LinearLayout>

                    <!-- Resolution Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resolution_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderResolution"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvResolutionValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Shadow Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shadow_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderShadow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvShadowValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Light Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/light_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderLight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvLightValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Character Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderCharacter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvCharacterValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Environment Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/environment_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderEnvironment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvEnvironmentValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Reflection Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reflection_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderReflection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvReflectionValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- SFX Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sfx_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSfx"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvSfxValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Bloom Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloom_quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderBloom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="5"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvBloomValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- Anti-Aliasing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/anti_aliasing"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Self Shadow -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/self_shadow"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSelfShadow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="2"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvSelfShadowValue"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="High"/>
                    </LinearLayout>

                    <!-- MetalFX Super Resolution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MetalFX Super Resolution"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchMetalFx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Half Resolution Transparent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Half Resolution Transparent"
                            android:textAppearance="?attr/textAppearanceLabelLarge"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchHalfResTransparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- DLSS Quality -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DLSS Quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:layout_marginTop="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderDlss"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0"
                            android:valueTo="4"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tvDlssValue"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            tools:text="Performance"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="80dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveBackup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/save_as_backup"
                    app:icon="@drawable/ic_save"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.TonalButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/apply"
                    app:icon="@drawable/ic_check"
                    style="@style/Widget.Material3.Button"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
